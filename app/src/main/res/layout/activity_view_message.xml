<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lmsautovista.View.Activity.ViewMessageActivity">

    <RelativeLayout
        android:id="@+id/headerViewMessage_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/header_withback_btn_layout"/>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/listMessageView_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4sp"
        app:cardCornerRadius="4sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/headerViewMessage_rl"
        >

    <RelativeLayout
        android:id="@+id/listMessageView_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/messageList_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Message List"
            android:textColor="@color/darkBlueWebsite"
            android:textSize="17sp"
            android:padding="10dp"
            />

        <ListView
            android:id="@+id/messageListView_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageList_txtView"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
