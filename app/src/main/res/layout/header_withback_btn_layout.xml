<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#08457E"
    android:id="@+id/headerFooter_RelativeLayout">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlueWebsite"
        android:layout_alignParentTop="true"
        >
        <ImageView
            android:id="@+id/backButton_ImageView"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:paddingLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/lmsheading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey1"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:text="@string/app_name"

            />

    </RelativeLayout>


</RelativeLayout>