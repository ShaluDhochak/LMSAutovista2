<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newCarStockDetailsCard_RelativeLayout">

    <android.support.v7.widget.CardView
        android:id="@+id/newCarStock_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4sp"
        app:cardElevation="4sp"
        android:layout_margin="5dp"
        >

    <RelativeLayout
        android:id="@+id/newCarStockDetailsInner_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/newCarStockSubModel_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="sub Model"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            />

        <TextView
            android:id="@+id/FuelTypeNewCarStock_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Fuel Type : "
            android:textColor="@color/edittextcolor"
            android:layout_below="@id/newCarStockSubModel_TextView"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:id="@+id/fuelTypeNewCarStockString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/FuelTypeNewCarStock_TextView"
            android:layout_below="@id/newCarStockSubModel_TextView"
            android:hint="@string/NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/VehicleStatusNewCarStockHeading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Status : "
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            android:layout_below="@id/FuelTypeNewCarStock_TextView"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            />

        <TextView
            android:id="@+id/VehicleStatusNewCarStockString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/VehicleStatusNewCarStockHeading_TextView"
            android:layout_below="@id/FuelTypeNewCarStock_TextView"
            android:hint="@string/NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/LocationNewCarStockHeading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/VehicleStatusNewCarStockHeading_TextView"
            android:text="Assigned Location : "
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/loctaionNewCarStockString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/VehicleStatusNewCarStockHeading_TextView"
            android:layout_toRightOf="@id/LocationNewCarStockHeading_TextView"
            android:hint="@string/NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/ageingNewCarStockHeading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LocationNewCarStockHeading_TextView"
            android:text="Ageing : "
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/ageingNewCarStockString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LocationNewCarStockHeading_TextView"
            android:layout_toRightOf="@id/ageingNewCarStockHeading_TextView"
            android:hint="ageing"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/colorNewCarStockHeading_Textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageingNewCarStockHeading_TextView"
            android:text="Color : "
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/edittextcolor"
            />

        <TextView
            android:id="@+id/colorStrinfNewCarStock_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageingNewCarStockHeading_TextView"
            android:layout_toRightOf="@id/colorNewCarStockHeading_Textview"
            android:hint="color"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/edittextcolor"
            />

        <View
            android:id="@+id/imageTextSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/colorStrinfNewCarStock_TextView"
            android:background="@color/edittextcolor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/lastUpdateDateNewCarStockHeading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTextSeparator"
            android:text="Last Update : "
            android:textColor="@color/dark_grey"
            android:textSize="14sp"
            android:layout_marginRight="2dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_toLeftOf="@+id/lastUpdateDateNewCarStockString_TextView"
            />
        <TextView
            android:id="@+id/lastUpdateDateNewCarStockString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTextSeparator"
            android:hint="date"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
