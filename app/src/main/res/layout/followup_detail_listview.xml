<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalLead_cardView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4sp"
        app:cardElevation="4sp"
        android:layout_below="@id/header_LinearLayout"
        >

    <RelativeLayout
        android:id="@+id/leadDetailsInner_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/leadName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Name"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            />

        <TextView
            android:id="@+id/leadContactNo_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/dark_grey"
            android:layout_below="@id/leadName_TextView"
            />

        <TextView
            android:id="@+id/bookingWithInDays_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="Booking Within Days"

            android:textColor="@color/darkBlueWebsite"
            android:textSize="14sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/interestedIn_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Interested In"
            android:textColor="@color/edittextcolor"
            android:layout_below="@id/leadContactNo_TextView"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            />
        <TextView
            android:id="@+id/interestInString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/interestedIn_TextView"
            android:text="@string/NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/leadDate_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lead Date"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            android:layout_below="@id/interestInString_TextView"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            />

        <TextView
            android:id="@+id/leadDateString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/leadDate_TextView"
            android:layout_below="@id/interestInString_TextView"
            android:text="@string/NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/status_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadDate_TextView"
            android:text="Feedback Status:"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/statusString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadDate_TextView"
            android:layout_toRightOf="@id/status_TextView"
            android:text="Not Mentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/nextAction_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_TextView"
            android:text="nextActionHeading"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/nextActionString_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusString_TextView"
            android:layout_toRightOf="@id/nextAction_TextView"
            android:text="NotMentioned"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textColor="@color/edittextcolor"
            android:textSize="12sp"
            android:visibility="gone"
            />
        <View
            android:id="@+id/imageTextSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/nextAction_TextView"
            android:background="@color/edittextcolor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/customerDetails_ImageView"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/customer_details"
            android:layout_marginRight="20dp"
            android:layout_below="@id/imageTextSeparator"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/addFollowUp_ImageView"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@drawable/followup_phone"
            android:layout_toLeftOf="@+id/customerDetails_ImageView"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/imageTextSeparator"
            android:visibility="gone"
            />


    </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>