<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.lmsautovista.View.Fragment.DSEReportFragment">

    <RelativeLayout
        android:id="@+id/dseWiseReport_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/dseWiseReportSpinner_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="4sp"
            app:cardCornerRadius="4sp"
            >
        <LinearLayout
            android:id="@+id/dseWiseReportSpinner_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:orientation="vertical">

            <Spinner
                android:id="@+id/locationReport_Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                />

            <TextView
                android:id="@+id/fromDateReport_TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/DateFrom"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:textColor="@color/edittextcolor"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/toDateReport_TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/DateTo"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:textColor="@color/edittextcolor"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/searchReport_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/outline_blue_curved_rectangle"
                android:text="@string/search"
                android:textAlignment="center"
                android:textColor="@color/darkBlueWebsite"
                android:textSize="14sp" />

        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dseWiseList_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dseWiseReportSpinner_cardView"
            app:cardCornerRadius="4sp"
            app:cardElevation="4sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            >

        <RelativeLayout
            android:id="@+id/dseWiseList_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dseWiseReportSpinner_LinearLayout"
            >

            <ListView
                android:id="@+id/dseWiseReport_listView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
