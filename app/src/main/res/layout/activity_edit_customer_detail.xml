<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lmsautovista.View.Activity.EditCustomerDetailActivity">

    <RelativeLayout
        android:id="@+id/headerEditCustomer_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_withback_btn_layout"/>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/editCustomerDetails_Cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerEditCustomer_relativeLayout"
        android:layout_margin="10dp"
        app:cardCornerRadius="4sp"
        app:cardElevation="4sp"

        >

    <RelativeLayout
        android:id="@+id/editCustomerDetails_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"

       android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/refreshAndEditDetails_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/editCustomerDetails_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/editCustomerDetailHeading"
                android:textColor="@color/darkBlueWebsite"
                android:textSize="15sp"
                />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/editLeadDetailname_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/refreshAndEditDetails_LinearLayout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editLeadDetailname_ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:src="@drawable/name" />

            <EditText
                android:id="@+id/editLeadDetailname_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/editLeadDetailname_ImageView"
                android:backgroundTint="@android:color/transparent"
                android:hint="Name"
                android:inputType="textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/editLeadDetailemail_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLeadDetailname_LinearLayout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editLeadDetailemail_ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/editLeadDetailemail_EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/editLeadDetailemail_ImageView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Email"
                android:inputType="textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/editLeadDetailContactno_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLeadDetailemail_LinearLayout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editLeadDetailContactno_ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:src="@drawable/contact_no" />

            <EditText
                android:id="@+id/editLeadDetailContactno_EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/editLeadDetailContactno_ImageView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="ContactNo"
                android:inputType="number"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editLeadDetailaddress_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLeadDetailContactno_LinearLayout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editLeadDetailaddress_ImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:src="@drawable/address" />

            <EditText
                android:id="@+id/editLeadDetailaddress_EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/editLeadDetailaddress_ImageView"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"

                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/editLeadDetailEnqID_TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/transparent"
                android:hint="engid"
                android:inputType="textNoSuggestions"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColorHint="@color/edittextcolor"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:id="@+id/editDetailSubmit_LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editCustomerDetails_Cardview"
        android:orientation="vertical">
        <Button
            android:id="@+id/editDetailSubmit_Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/outline_blue_curved_rectangle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="@string/submit"
            android:textColor="@color/darkBlueWebsite"
            android:textAlignment="center"
            android:textSize="14dp"
            />

    </LinearLayout>

</RelativeLayout>
