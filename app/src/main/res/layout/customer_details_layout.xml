<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/activityNavigationLeadDetails_RealtiveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/navigationLeadDetails_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardElevation="4sp"
                app:cardCornerRadius="4sp"
                >

            <RelativeLayout
                android:id="@+id/NavigationLeadDetails_RelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/NavigationLeadDetails_TextView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/customerDetails"
                    android:textColor="@color/darkBlueWebsite"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/NavigationLeadname_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NavigationLeadDetails_TextView"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/NavigationLeadname_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/name" />

                    <TextView
                        android:id="@+id/NavigationLeadname_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/NavigationLeadname_ImageView"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Name"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/NavigationLeadeagernessDetails_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/outline_blue_curved_rectangle"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:hint="Booking Within Days"
                        android:textColor="@color/darkBlueWebsite"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/NavigationLeademail_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NavigationLeadname_LinearLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/NavigationLeademail_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/email" />

                    <TextView
                        android:id="@+id/NavigationLeademail_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/NavigationLeademail_ImageView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Email"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NavigationLeadContactno_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NavigationLeademail_LinearLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/NavigationLeadContactno_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/contact_no" />

                    <TextView
                        android:id="@+id/NavigationLeadContactno_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/NavigationLeadContactno_ImageView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="ContactNo"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                    <ImageView
                        android:id="@+id/dialContactNotification_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/addFollowUpName_TextView"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="160dp"
                        android:src="@drawable/contact_no"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NavigationLeadAddressModel_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NavigationLeadContactno_LinearLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/NavigationLeadAddressModel_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/address" />

                    <TextView
                        android:id="@+id/NavigationLeadAddressModel_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/NavigationLeadAddressModel_ImageView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Address"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/NavigationLeadEnqID_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="engid"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NavigationLeadBookedWithIn_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/NavigationLeadAddressModel_LinearLayout"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/NavigationBookedWithIn_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/call_center" />

                    <TextView
                        android:id="@+id/navigationLeadBookedWithIn_textView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/NavigationBookedWithIn_ImageView"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/bookingWithinDays"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/buyerType_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/navigationLeadDetails_cardView"
                app:cardCornerRadius="4sp"
                app:cardElevation="4sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                >

            <RelativeLayout
                android:id="@+id/buyerType_RelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/NavigationLeadDetails_RelativeLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:id="@+id/newModel_RelativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/inquiry_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:text="@string/Details"
                        android:textColor="@color/darkBlueWebsite"
                        android:textSize="15sp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/followupByNotificationCustomerDetails_RelativeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newModel_RelativeLayout"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/followupByHeadingLeadCustomerDetails_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="5dp"
                        android:text="@string/followUpBy"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/followupByNotificationCustomerDetails_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Not Mentioned"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/newModelCustomerDetails_RelativeLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/followupByNotificationCustomerDetails_RelativeLayout"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/newModelHeadingCustomerDetails_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="17dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="5dp"
                        android:text="@string/newModel"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/newModelCustomerDetails_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Not Mentioned"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/newVariantCustomerDeatils_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newModelCustomerDetails_RelativeLayout"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/newVariantCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:text="@string/newVariant"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/newVaraintCustomerDetails_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nextActionCustomerDetails_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newVariantCustomerDeatils_LinearLayout"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/nextActionCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="@string/nextActionHeading"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nextActionCustomerDetailsString_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:paddingBottom="10dp"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedbackStatusCustomerDetails_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nextActionCustomerDetails_LinearLayout"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/feedbackStatusCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="@string/feedbackStatus"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/feedbackStatusCustomerDetailsString_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:paddingBottom="10dp"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/callDateNotificationCustomerDetails_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/feedbackStatusCustomerDetails_LinearLayout"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/callDateNotificationCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="@string/calldate"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/callDateNotificationCustomerDetailsString_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:paddingBottom="10dp"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nfdNotificationCustomerDetails_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/callDateNotificationCustomerDetails_LinearLayout"
                    android:weightSum="4"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/nfdNotificationCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="@string/nfd"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nfdNotificationCustomerDetailsString_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:paddingBottom="10dp"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/remarkNotificationCustomerDetails_LinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nfdNotificationCustomerDetails_LinearLayout"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/remarkNotificationCustomerDetailsHeading_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="@string/Remark"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/remarkNotificationCustomerDetailsString_TextView"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/NotMentioned"
                        android:paddingBottom="10dp"
                        android:textColor="@color/edittextcolor"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>