<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lmsautovista.View.Fragment.DseDailyReportViewFragment">

    <RelativeLayout
        android:id="@+id/dseDailyReportView_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dseDailyReportViewDashboard_Relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Spinner
                android:id="@+id/locationDseDailyView_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <Spinner
                android:id="@+id/selectDseDailyDashboard_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                />
            <EditText
                android:id="@+id/dateSelectionDSEDailyReport_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:hint="Select Date"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                />
            <Button
                android:id="@+id/dseDailyReportSearch_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:textAlignment="center"
                android:textColor="@color/darkBlueWebsite"
                android:textSize="20sp"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dseDailyReportDetails_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@color/colorPlatinum"
            android:visibility="gone"
            android:layout_below="@+id/dseDailyReportViewDashboard_Relativelayout"
            >

            <TextView
                android:id="@+id/dseDailyReportDetails_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DSE Daily Report"
                android:textSize="14sp"
                android:textColor="@color/dark_grey"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:padding="10dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dseDailyReportList_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/dseDailyReportDetails_RelativeLayout"
            android:background="@drawable/outline_blue_curved_rectangle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/countDseDailyReportHeading_relativeLayout"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/countLocationWise_ListView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/leadHeading_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/darkBlueWebsite"
                    />
                <View
                    android:id="@+id/separatorBelowLeadHeading_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/leadHeading_tv"/>
                <TextView
                    android:id="@+id/enquiryDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorBelowLeadHeading_view"
                    android:text="Enquiry"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorEnquiryDSEReport_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/enquiryDSEReportHeading_tv"/>
                <TextView
                    android:id="@+id/walkInDSEDailyHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorEnquiryDSEReport_view"
                    android:text="WalkIn"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorWalkInDSEDaily_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/walkInDSEDailyHeading_tv"/>
                <TextView
                    android:id="@+id/homeVisitDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorWalkInDSEDaily_view"
                    android:text="Home Visit"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorHomeVisitDSEReport_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/homeVisitDSEReportHeading_tv"/>
                <TextView
                    android:id="@+id/testDriveDSEDetailHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorHomeVisitDSEReport_view"
                    android:text="Test Drive"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatortestDriveDSEDetail_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/testDriveDSEDetailHeading_tv"/>
                <TextView
                    android:id="@+id/bookingDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatortestDriveDSEDetail_view"
                    android:text="Booking"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorGatePassDSEDetail_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/bookingDSEReportHeading_tv"/>
                <TextView
                    android:id="@+id/gatePassDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorGatePassDSEDetail_view"
                    android:text="Gate Pass"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorDeliveryDSEDetail_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/gatePassDSEReportHeading_tv"/>
                <TextView
                    android:id="@+id/deliveryDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorDeliveryDSEDetail_view"
                    android:text="Delivery"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    />
                <View
                    android:id="@+id/separatorEvaluationDSEDetail_view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/dark_grey"
                    android:layout_below="@+id/deliveryDSEReportHeading_tv"/>
                <TextView
                    android:id="@+id/evaluationDSEReportHeading_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separatorEvaluationDSEDetail_view"
                    android:text="Evaluation"
                    android:textAlignment="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/separatorRightLead_view"
                android:layout_width="1dp"
                android:layout_height="320dp"
                android:background="@color/dark_grey"
                android:layout_toRightOf="@+id/countDseDailyReportHeading_relativeLayout"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/countDSEDailyReport_ListView"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/countDseDailyReportHeading_relativeLayout"
                />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
