<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lmsautovista.View.Activity.SearchLeadViaContactNoActivity">

    <RelativeLayout
        android:id="@+id/headerSerchContactNo_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_withback_btn_layout"/>

    </RelativeLayout>

   <android.support.v7.widget.CardView
       android:id="@+id/searchCustomerCustomrOperation_cardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="4sp"
       app:cardElevation="4sp"
       android:layout_margin="10dp"
       android:layout_below="@+id/headerSerchContactNo_relativeLayout"
       >
    <RelativeLayout
        android:id="@+id/searchCustomerDetails_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/headerSerchContactNo_relativeLayout"
        >

        <LinearLayout
            android:id="@+id/refreshAndSearchCustomerDetails_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <TextView
                android:id="@+id/searchCustomerDetails_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkBlueWebsite"
                android:text="@string/customerDetails"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                />
        </LinearLayout>

    </RelativeLayout>
   </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/CustomerDeatilsSearch_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4sp"
        app:cardCornerRadius="4sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/searchCustomerCustomrOperation_cardView"
        >

    <RelativeLayout
        android:id="@+id/CustomerDeatilsSearch_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/searchCustomerDetails_RelativeLayout"
        >
        <ListView
            android:id="@+id/searchContactNoCutomerDetails_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
