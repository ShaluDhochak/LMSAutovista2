<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.lmsautovista.View.Fragment.AddMessageFragment">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/listMessageLayout_cardView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:cardCornerRadius="4sp"
        app:cardElevation="4sp"
        android:layout_margin="5dp"
        android:paddingBottom="40dp"
        >

    <RelativeLayout
        android:id="@+id/listMessageLayout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/listMsgHeading_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBlueWebsite"
            android:text="@string/listOfMessage"
            android:paddingTop="10dp"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/deleteMessage_txtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/darkBlueWebsite"
            android:textAlignment="textEnd"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_below="@+id/listMsgHeading_textView"
            android:gravity="end" />

        <ListView
            android:id="@+id/listOfmsg_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteMessage_txtView"
            />


    </RelativeLayout>

    </android.support.v7.widget.CardView>
    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/addMessage_fam"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:menu_animationDelayPerItem="55"
            app:menu_buttonSpacing="0dp"
            app:menu_colorNormal="#08457E"
            app:menu_colorPressed="#08457E"
            app:menu_colorRipple="#99d4d4d4"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/car"
            app:menu_labels_colorNormal="@color/lightGrey1"
            app:menu_labels_colorPressed="#444"
            app:menu_labels_colorRipple="#66efecec"
            app:menu_labels_cornerRadius="3dp"
            app:menu_labels_ellipsize="none"
            app:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            app:menu_labels_margin="0dp"
            app:menu_labels_maxLines="-1"
            app:menu_labels_padding="8dp"
            app:menu_labels_position="left"
            app:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            app:menu_labels_showShadow="true"
            app:menu_labels_singleLine="false"
            app:menu_labels_textColor="@color/edittextcolor"
            app:menu_labels_textSize="15sp"
            app:menu_openDirection="up"
            app:menu_shadowColor="@color/lightGrey1"
            app:menu_shadowRadius="4dp"
            app:menu_shadowXOffset="1dp"
            app:menu_shadowYOffset="4dp"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                app:fab_label="@string/nav_add_message"
                app:fab_size="mini"
                app:fab_colorNormal="@color/darkBlueWebsite"
                app:fab_colorPressed="@color/darkBlueWebsite"
                android:id="@+id/addMessage_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/plus"/>

        </com.github.clans.fab.FloatingActionMenu>
        </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>

</FrameLayout>
