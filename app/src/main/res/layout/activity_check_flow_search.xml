<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.lmsautovista.View.Activity.CheckFlowSearchActivity">

    <RelativeLayout
        android:id="@+id/headerSerchContactNo_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/header_withback_btn_layout"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/checkFlowBoxSearch_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transferred Lead Details"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/edittextcolor"
        android:background="@drawable/outline_blue_curved_rectangle"
        android:layout_below="@+id/headerSerchContactNo_relativeLayout"
        />

   <android.support.v7.widget.CardView
       android:id="@+id/checkFlow_cardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardElevation="4sp"
       app:cardCornerRadius="4sp"
       android:layout_margin="10dp"
       android:layout_below="@+id/checkFlowBoxSearch_textView"
       >

    <RelativeLayout
        android:id="@+id/checkFlowList_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ListView
            android:id="@+id/checkflow_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
   </android.support.v7.widget.CardView>

</RelativeLayout>
