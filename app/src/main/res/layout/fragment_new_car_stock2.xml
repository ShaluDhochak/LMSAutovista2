<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.excell.lms.lmsautovista.View.Fragment.NewCarStock2Fragment">

    <RelativeLayout
        android:id="@+id/mainNewCarStock1_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filterSearchNewStock1_TXTview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to Filter.."
            android:textAlignment="textEnd"
            android:layout_margin="5dp"
            android:background="@drawable/outline_blue_curved_rectangle"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/darkBlueWebsite"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/filterSearchMessageNewStock1_TXTview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Select the Filter Fields."
            android:textAlignment="textEnd"
            android:layout_margin="5dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/darkBlueWebsite"
            android:layout_gravity="end"
            android:layout_below="@+id/filterSearchNewStock1_TXTview"/>



        <RelativeLayout
            android:id="@+id/count_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/filterSearchNewStock1_TXTview">

            <android.support.v7.widget.CardView
                android:id="@+id/newStockCount_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4sp"
                app:cardElevation="4sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/newCarStockCount1_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
