<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/rowCountLead_linearLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        >

        <TextView
            android:id="@+id/userNameHeading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Count"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/darkBlueWebsite"
            android:layout_weight="1.5"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittextcolor"/>

        <TextView
            android:id="@+id/totalCallingCount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="unassignedLead"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1.5"
            android:layout_below="@+id/separatorBelow_view"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittextcolor"/>

        <TextView
            android:id="@+id/totalConnectedCount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="unassignedLead"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1.5"
            android:layout_below="@+id/separatorBelow_view"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/edittextcolor"/>

        <TextView
            android:id="@+id/totalNotConnectedCount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="unassignedLead"
            android:textSize="12sp"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_weight="1.5"
            android:layout_below="@+id/separatorBelow_view"
            />

    </LinearLayout>
    <View
        android:id="@+id/separator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/edittextcolor"

        />
</LinearLayout>