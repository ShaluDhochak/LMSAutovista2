<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.lmsautovista.View.Fragment.AddNewLeadFragment">

    <ScrollView
        android:id="@+id/addNewLead_sv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/activity_add_lead"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/leadDetails_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >
        <RelativeLayout
            android:id="@+id/leadDetails_RelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/leadDetails_TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:text="@string/lead_details"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:id="@+id/leadfirstname_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadDetails_TextView"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leadfirstname_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/name"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/leadfirstname_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/leadfirstname_ImageView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:hint="Name"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/edittextcolor"
                    android:inputType="textNoSuggestions"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/leademail_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadfirstname_LinearLayout"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/leademail_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/email"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/leademail_EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/leademail_ImageView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:hint="Email"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/edittextcolor"
                    android:inputType="textEmailAddress"
                    />


            </LinearLayout>
            <TextView
                android:id="@+id/invalidEmail_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leademail_LinearLayout"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/leadContactno_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/invalidEmail_TextView"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/leadContactno_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/contact_no"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/leadContactno_EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:hint="ContactNo"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/edittextcolor"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_toRightOf="@+id/leadContactno_ImageView"
                    />

                <ImageView
                    android:id="@+id/contactNoSearch_imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search_button"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/leadaddress_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadContactno_LinearLayout"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leadaddress_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/address"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:id="@+id/leadaddress_EditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/leadaddress_ImageView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:hint="Address"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="@color/edittextcolor"
                    android:inputType="textNoSuggestions"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/leadProcess_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadaddress_LinearLayout"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leadProcess_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/leads"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:paddingLeft="10dp"
                    />

                <Spinner
                    android:id="@+id/leadProcess_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignRight="@id/leadSource_ImageView"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/leadSource_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadProcess_LinearLayout"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leadSource_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/leads"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:paddingLeft="10dp"
                    />

                <Spinner
                    android:id="@+id/leadSource_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignRight="@id/leadSource_ImageView"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/leadLocation_LinearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leadSource_LinearLayout"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/leadLocation_ImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/address"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:paddingLeft="10dp"
                    />

                <Spinner
                    android:id="@+id/location_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/leadLocation_ImageView"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>

        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/assignTo_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/leadDetails_cardView"
            >

        <RelativeLayout
            android:id="@+id/assignTo_RelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >

            <Spinner
                android:id="@+id/assignTo_Spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="8dp"
                />

        </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/leadComment_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            android:layout_below="@id/assignTo_cardView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >

        <RelativeLayout
            android:id="@+id/leadcomment_RelativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="10dp"
            >

            <EditText
                android:id="@+id/leadcomment_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Comment Here!!!"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                android:backgroundTint="@android:color/transparent"
                android:textColorHint="@color/edittextcolor"
                android:inputType="textMultiLine"
                />
        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/addNewLeadSubmit_LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/leadComment_cardView"
            android:orientation="vertical">
            <Button
                android:id="@+id/addNewLeadSubmit_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_blue_curved_rectangle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/submit"
                android:textColor="@color/darkBlueWebsite"
                android:textAlignment="center"
                android:textSize="14dp"
                />
            <Button
                android:id="@+id/resetAddNewLead_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_blue_curved_rectangle"
                android:text="@string/reset"
                android:textColor="@color/darkBlueWebsite"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                />
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</FrameLayout>
