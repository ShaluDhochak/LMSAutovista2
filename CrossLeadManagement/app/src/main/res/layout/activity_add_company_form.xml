<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddCompanyFormActivity">

    <LinearLayout
        android:id="@+id/headerAddCompany_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <include layout="@layout/header_layout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/headerAddCompany_ll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Name:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <EditText
                android:id="@+id/companyAddNewLead_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Company name"
                android:background="@null"
                android:lines="1"
                android:maxLength="30"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Company Reg Id:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <EditText
                android:id="@+id/companyRegIdAddCompany_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="555-5555"
                android:background="@null"
                android:lines="1"
                android:maxLength="15"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Location:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <EditText
                android:id="@+id/addressAddCompany_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="pune"
                android:background="@null"
                android:lines="1"
                android:maxLength="30"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Active From:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <TextView
                android:id="@+id/activeFromCalender_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text=""
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"/>
            <ImageView
                android:id="@+id/activeFromCalender_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/add_btn"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Active From:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <TextView
                android:id="@+id/activeToCalender_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:text=""
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>
            <ImageView
                android:id="@+id/activeToCalender_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/add_btn"
                android:layout_marginTop="5dp"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Category :"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <Spinner
                android:id="@+id/productTypeName_Spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Details:"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"/>

            <EditText
                android:id="@+id/detailsAddNewLead_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:lines="1"
                android:maxLength="50"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

</RelativeLayout>